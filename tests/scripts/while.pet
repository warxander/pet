var i = 0;

while (false) i = i + 1;

while (i < 5) {
	i = i + 1;
	if (i < 4) continue;
}
assert(i == 5);

while (true) {
	i = i - 1;
	if (i == 2) break;
}
assert(i == 2);

while (true) {
	while (true) {
		i = i + 1;
		if (i < 4) continue;
		if (i == 4) break;
	}

	while (true) {
		i = i - 1;
		if (i == 1) break;
		continue;
	}

	if (i == 1) break;
}
assert(i == 1);
